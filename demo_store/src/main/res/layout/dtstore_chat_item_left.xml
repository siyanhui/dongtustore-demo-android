<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">


    <TextView
        android:id="@+id/chat_item_date"
        style="@style/dtstore_chat_item_date"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/chat_item_avatar"
            style="@style/dtstore_chat_item_avatar"
            android:layout_alignParentLeft="true" />

        <FrameLayout
            android:id="@+id/chat_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/chat_item_avatar">

            <FrameLayout
                android:id="@+id/chat_item_content_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dtstore_chat_bg_from"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start|center_vertical"
                android:maxWidth="225.0dip"
                android:minHeight="50dp"
                android:paddingLeft="15dip"
                android:visibility="gone" />

            <com.dongtu.sdk.widget.DTImageView
                android:id="@+id/chat_item_content_dt_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="225.0dip"
                android:minHeight="50dp"
                android:paddingLeft="15dip"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/chat_item_fail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chat_item_content"
            android:focusable="false"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/chat_item_progress"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chat_item_content"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>