<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dtstore_chat_item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bqmm_bg_chat_time_tag</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dtstore_chat_item_avatar">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/bqmm_default_head</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>